{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SFTP whl to remote machine",
            "type": "shell",
            "command": "sshpass",
            "args": [
                "-p",
                "${input:remotePassword}",
                "scp",
                "-r",
                "${input:sourceFile}",
                "${input:remoteUser}@${input:remoteHost}:${input:remotePath}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "remoteHost",
            "type": "promptString",
            "description": "远程主机地址 (IP或域名)",
            "default": "172.16.10.165"
        },
        {
            "id": "remoteUser",
            "type": "promptString",
            "description": "远程用户名",
            "default": "nav01"
        },
        {
            "id": "remotePassword",
            "type": "promptString",
            "description": "远程密码",
            "default": " ",
            "password": true
        },
        {
            "id": "sourceFile",
            "type": "promptString",
            "description": "源文件或目录路径",
            "default": "${workspaceFolder}/dist/*.whl"
        },
        {
            "id": "remotePath",
            "type": "promptString",
            "description": "远程目标路径",
            "default": "/home/nav01/Music"
        }
    ]
}